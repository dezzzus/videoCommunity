<% include head_begin.ejs %>
<% include head_end.ejs %>
<div class="container">
    <div class="row">
        <h1>Profile</h1>

        <div class="col-md-4">
            <div class="formbox">
                <form action="/profile" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="email_input">Email:</label>
                        <input type="text" class="form-control" id="email_input" value="<%= user.email %>"
                               name="email"/>
                    </div>
                    <div class="form-group">
                        <label for="name_input">Full name:</label>
                        <input type="text" class="form-control" id="name_input" value="<%= user.name %>" name="name"/>
                    </div>
                    <div class="form-group">
                        <label for="phone_input">Phone:</label>
                        <input type="text" class="form-control" id="phone_input" name="phone" value="<%= user.phone || '' %>"/>
                    </div>
                    <div class="form-group">
                        <label for="agency_input">Agency:</label>
                        <input type="text" class="form-control" id="agency_input" value="<%= user.agency %>"
                               name="agency"/>
                    </div>
                    
                    <% if (usePhotoFile) { %>
                      <div class="form-group">
                          <label for="photofile_input">Your photo:</label>
                          <% if (user.photoFileId) { %>
                            <div class="agent_photo">
                                <img alt="<%= user.name %>" src="<%= user.photoURL %>">
                            </div>
                          <% } %>
                          <input type="file" class="form-control" id="photofile_input" name="photoFile"/>
                      </div>
                    <% } else { %>
                       <div class="form-group">
                          <label for="photo_input">Photo URL:</label>
                          <input type="text" class="form-control" id="photo_input" value="<%= user.photoURL %>"
                                 name="photoURL"/>
                      </div>
                    <% } %>
                    
                    <div class="form-group">
                        <label for="logofile_input">Logo to embed in your videos (optional): </label>
                        <input type="file" class="form-control" id="logofile_input" name="logoFile"/>
                    </div>
                    <div class="form-group">
                        <label for="password_input">New password:</label>
                        <input type="password" class="form-control" id="password_input" name="password"/>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-success" value="Submit"/>
                        <a class="btn btn-warning" href="/logout">Logout</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
<% include foot.ejs %>