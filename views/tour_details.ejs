<% include head.ejs %>
<script src="http://cdn.pubnub.com/pubnub.min.js"></script>
<script src="/js/video_sync.js"></script>

<script>
    _gaq.push(['_setCustomVar',
        1,
        'IsPresenter',
        '<%= isPresenting %>',
        3 // page level
    ]);
    _gaq.push(['_setCustomVar',
        2,
        'AgentId',
        '<%= agent._id %>',
        3 // page level
    ]);
    _gaq.push(['_trackEvent',
        'tour', // category of activity
        'pageview', // Action
    ]);
</script>

<div class="container">
    <h1><%= agent.agency || 'Video tour' %></h1>

    <div class="row">
        <div class="col-md-4">
            <div class="agent_photo">
                <img alt="<%= agent.name %>" src="<%= agent.photoURL %>">
            </div>
            <div class="agent_name">
                <%= agent.name %>
            </div>
            <iframe
                    class="property_map"
                    frameborder="0"
                    src="https://www.google.com/maps/embed/v1/place?key=AIzaSyAEYY3qtKKd89MjKVea6ysS4OsJyscK2XE&q=<%= mapQuery %>">
            </iframe>
            <div class="property_address">
                <%= property.address %>
            </div>
        </div>
        <div class="col-md-8">
            <% if (isPresenting) { %>
            <div><%= agent.name %>, you are the presenter.</div>
            <br>
            <% } else { %>
            <div> <%= agent.name %> is controlling the playback, please ask them to pause or rewind if necessary. Thank
                you.
            </div>
            <br>
            <% } %>
            <% if(property.playerType == 'vimeo'){ %>
            <% include player/vimeo.ejs %>
            <% } %>

            <% if(property.playerType == 'flowplayer'){ %>
            <% include player/flowplayer.ejs %>
            <% } %>
        </div>
    </div>

</div>

<% include foot.ejs %>