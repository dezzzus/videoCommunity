<% include head.ejs %>
<div class="container">
    <div class="row">
        <h1>Profile</h1>

        <div class="col-md-4">
            <div class="formbox">
                <form action="/tour/<%=tour._id.toHexString() %>/edit" method="post">
                    <div class="form-group">
                        <label for="address_input">Address:</label>
                        <input type="text" class="form-control" id="address_input" value="<%= tour.address %>"
                               name="address"/>
                    </div>

                    <div class="form-group">
                        <input type="submit" class="btn btn-success" value="Submit"/>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
